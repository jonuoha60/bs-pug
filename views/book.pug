doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= book.title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

  body.container.mt-5
    h1= book.title

    h4.mb-3 Written by #{book.author}

    p
      strong Pages:
      |  #{book.pages}

    p
      strong Rating:
      |  #{book.rating}

    p
      strong Genres:
    if book.genres && book.genres.length
      ul
        each genre in book.genres
          li= genre
    else
      p No genres listed.

    hr

    a(href=`/books/edit?id=${book._id}`) Edit Book
    a.btn.btn-secondary.ms-2(href="/books") Back to Home

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
